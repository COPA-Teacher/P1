<%- include("../partials/header") %>

<div class="page-content">
    <h1>Get in Touch</h1>

    <div class="contact-grid">
        <div class="contact-methods">
            <h2>Contact Information</h2>
            <p>
                <i class="icon-phone"></i> <strong>Phone:</strong> +1 (800)
                123-4567
            </p>
            <p>
                <i class="icon-email"></i>
                <strong>Email:</strong> support@company.com
            </p>
            <p>
                <i class="icon-address"></i> <strong>HQ Address:</strong><br />
                123 Business Ave, Suite 500<br />
                San Francisco, CA 94107
            </p>

            <h3>Support Hours</h3>
            <p>
                Monday-Friday: 8AM-6PM EST<br />
                Weekends: Emergency support only
            </p>
        </div>

        <div class="contact-form">
            <h2>Send Us a Message</h2>
            <form action="/contact" method="POST">
                <div class="form-group">
                    <input
                        type="text"
                        name="name"
                        placeholder="Your Name"
                        required
                    />
                </div>
                <div class="form-group">
                    <input
                        type="email"
                        name="email"
                        placeholder="Email Address"
                        required
                    />
                </div>
                <div class="form-group">
                    <select name="department" required>
                        <option value="">Select Department</option>
                        <option>Sales</option>
                        <option>Support</option>
                        <option>Billing</option>
                    </select>
                </div>
                <div class="form-group">
                    <textarea
                        name="message"
                        placeholder="Your message..."
                        rows="5"
                        required
                    ></textarea>
                </div>
                <button type="submit" class="btn-primary">Send Message</button>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
